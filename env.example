# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# App Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret

# Encryption Key for API Keys (generate a random 32 character string)
ENCRYPTION_KEY=your-secret-key-12345678901234567890

# Klaviyo API Key (for testing only - never commit real keys!)
KLAVIYO_API_KEY=pk_your_klaviyo_private_key_here

# Airtable Integration (for live campaign sync)
AIRTABLE_BASE_ID=appYourBaseIdHere
AIRTABLE_TOKEN=patYourPersonalAccessTokenHere
AIRTABLE_TABLE_NAME=Campaigns

# Portal Customization (optional - client-side accessible)
NEXT_PUBLIC_PORTAL_BACKGROUND_IMAGE_URL=https://your-domain.com/portal-background.jpg
NEXT_PUBLIC_PORTAL_BACKGROUND_OPACITY=0.15
